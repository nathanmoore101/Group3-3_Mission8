@model TaskModel

<h2>Are you sure you want to delete @Model.TaskName? </h2>

<form asp-controller="Home" asp-action="Delete" method="post">

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="QuadrantView">Cancel</a>
</form>
