@model Group3_3_Mission8.Models.TaskModel

@{
    ViewData["Title"] = "Add/Edit Task";
}

<h2>@ViewData["Title"]</h2>


<form method="post">
    <div class="form-group">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Completed" value="False" />

        <label asp-for="TaskName">Task</label>
        <input asp-for="TaskName" class="form-control" />

        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>

        <input asp-for="DueDate" class="form-control" type="date" />

        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quadrant">Quadrant</label>

        <select asp-for="Quadrant" class="form-control">
            <option value="1">Urgent-Important</option>
            <option value="2">Not Urgent-Important</option>
            <option value="3">Urgent-Not Important</option>
            <option value="4">Not Urgent-Not Important IV</option>

        </select>
        <span asp-validation-for="Quadrant" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <!--<select asp-for="Category" class="form-control">
            <option value="0">Home</option>
            <option value="1">School</option>
            <option value="2">Work</option>
            <option value="3">Church</option>
        </select>-->
        <select asp-for="CategoryId" required class="form-control">
            <option value="">-- Select Category --</option>
            <option value="5">-- Wrong Category --</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>

        <!--<span asp-validation-for="Category" class="text-danger"></span>-->
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


