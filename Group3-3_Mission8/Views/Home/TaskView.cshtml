@model Group3_3_Mission8.Models.TaskModel

@{
    ViewData["Title"] = "Add/Edit Task";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="TaskName">Task</label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant" class="form-control">
            <option value="1">Urgent-Important</option>
            <option value="2">Not Urgent-Important</option>
            <option value="3">Urgent-Not Important</option>
            <option value="4">Not Urgent-Not Important IV</option>
        </select>
        <span asp-validation-for="Quadrant" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="Completed" class="form-check-label" />
            <label asp-for="Completed" class="form-check-label">Completed</label>
        </div>

        <span asp-validation-for="Completed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


